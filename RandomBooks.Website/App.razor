<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.Layouts.MainLayout)">
                <NotAuthorized>
                    <h3>You're not allowed to view this page!</h3>
                    <h5>Please <a href="login" class="text-danger">login</a> or <a href="register" class="text-danger">register</a> for a new account.</h5>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <RedirectBackToHome/>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
